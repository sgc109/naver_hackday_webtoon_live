<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sgc109.webtoonlive.LiveListActivity">

    <ProgressBar
        android:id="@+id/live_list_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/live_list_empty_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="@string/live_list_empty_message"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/live_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:listitem="@android:layout/simple_list_item_checked">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
