<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LiveActivity">

        <SeekBar
            android:id="@+id/live_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-4dp"
            android:layout_marginTop="-4dp"
            android:max="10000"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressDrawable="@drawable/seek_bar"
            android:thumbTint="@android:color/transparent"
            android:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_live_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@android:layout/simple_list_item_checked" />

            <com.example.sgc109.webtoonlive.CustomView.CustomScrollView
                android:id="@+id/comment_info_scroll"
                android:scrollbars="none"
                android:layout_width="5dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/comment_info"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content">


                </RelativeLayout>
            </com.example.sgc109.webtoonlive.CustomView.CustomScrollView>

            <com.example.sgc109.webtoonlive.CustomView.CustomScrollView
                android:id="@+id/comment_field_scroll"
                android:visibility="gone"
                android:background="#22000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/comment_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></RelativeLayout>

            </com.example.sgc109.webtoonlive.CustomView.CustomScrollView>

            <com.example.sgc109.webtoonlive.CustomView.BottomEmotionBar
                android:id="@+id/emotionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <com.example.sgc109.webtoonlive.CustomView.EmotionView
        android:id="@+id/emotionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>